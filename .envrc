#!/usr/bin/env bash

# Beads: force repo-local DB and disable daemon by default.
export BEADS_NO_DAEMON=1
export BEADS_DIR="$PWD/.beads"

# Beads: default issue prefix for no-db mode.
if [ -z "${BD_ISSUE_PREFIX:-}" ]; then
  export BD_ISSUE_PREFIX=podcast-pipeline
fi

# Optional: only set if the repo has a local beadsflow config.
if [ -f "$PWD/beadsflow.toml" ]; then
  export BEADSFLOW_CONFIG="$PWD/beadsflow.toml"
fi
